<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27283b"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#27283b"
        app:title="@string/profile_title"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equalizer"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_switch_on" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="100dp"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style_2"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:text="50hz"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="100dp"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style_2"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="90dp"
                android:text="130hz"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style_2"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="90dp"
                android:text="320hz"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="100dp"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style_2"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="90dp"
                android:text="800hz"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar4"
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="100dp"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style_2"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="90dp"
                android:text="2khz"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar5"
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="100dp"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style_2"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="90dp"
                android:text="5khz"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar6"
                android:layout_width="200dp"
                android:layout_height="8dp"

                android:layout_marginTop="100dp"
                android:layout_marginRight="-70dp"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style_2"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="90dp"
                android:text="12.5khz"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="refesh"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_horigentol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Boost Volume"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar_boost_volume"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:progress="40"
            android:progressDrawable="@drawable/seekbar_style_2"
            android:splitTrack="false"
            android:thumb="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:text="Bast boost"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar_bass_boost"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:progress="20"
            android:progressDrawable="@drawable/seekbar_style_2"
            android:splitTrack="false"
            android:thumb="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:text="Virtualizer"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar_virtualizer"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:progress="10"
            android:progressDrawable="@drawable/seekbar_style_2"
            android:splitTrack="false"
            android:thumb="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:text="Reverb"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>